{
    "defaultSeverity": "error",
    "rules": {
        "await-promise": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "no-floating-promises": true,
        "no-trailing-whitespace": true,
        "object-literal-sort-keys": true,
        "ordered-imports": true,
        "quotemark": [
            true,
            "double",
            "avoid-escape",
            "avoid-template"
        ],
        "promise-function-async": true,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    },
    "rulesDirectory": []
}
